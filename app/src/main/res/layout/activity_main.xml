<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/textNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="38dp"
        android:ems="10"

        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="140dp"
        android:text="Enter number"
        android:textSize="16sp"
        android:textColor="#B3000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.104" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="34dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">


        <RadioButton
            android:id="@+id/radioDecimal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decimal"
            app:layout_constraintEnd_toStartOf="@+id/radio_Binary"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword" />

        <RadioButton
            android:id="@+id/radio_Binary2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binary"
            app:layout_constraintTop_toTopOf="@+id/radio_Decimal"
            tools:layout_editor_absoluteX="123dp" />

        <RadioButton
            android:id="@+id/radio_Octal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Octal "
            app:layout_constraintStart_toEndOf="@+id/radio_Binary"
            app:layout_constraintTop_toTopOf="@+id/radio_Binary" />

        <RadioButton
            android:id="@+id/radio_Hexadecimal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hexadecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/radio_Octal"
            app:layout_constraintTop_toTopOf="@+id/radio_Octal" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="34dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNumber">


        <RadioButton
            android:id="@+id/radio_Decima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decimal"
            app:layout_constraintEnd_toStartOf="@+id/radio_Binary"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword" />

        <RadioButton
            android:id="@+id/radio_Binary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binary"
            app:layout_constraintTop_toTopOf="@+id/radio_Decimal"
            tools:layout_editor_absoluteX="123dp" />

        <RadioButton
            android:id="@+id/radio_Octal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Octal "
            app:layout_constraintStart_toEndOf="@+id/radio_Binary"
            app:layout_constraintTop_toTopOf="@+id/radio_Binary" />

        <RadioButton
            android:id="@+id/radio_Hexadecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hexadecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/radio_Octal"
            app:layout_constraintTop_toTopOf="@+id/radio_Octal" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:srcCompat="@drawable/baseline_arrow_downward_24" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Result :"
         android:layout_marginLeft="16dp"
        android:textStyle="normal"
        android:textColor="#B3000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnStart"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#99000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnStart"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>